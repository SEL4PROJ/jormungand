    "example-untrusted/EgTop"
    "example-trusted/EgTop2"
  document_files
    "dataport.camkes"
    "event.camkes"
    "imgs/echo.pdf"
    "imgs/filter.pdf"
    "imgs/NICTA_logo.pdf"
    "imgs/thydeps.pdf"
    "intro.tex"
    "root.bib"
    "root.tex"
    "filter.camkes"
    "simple.camkes"
    "comment.sty"

